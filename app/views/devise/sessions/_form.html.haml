- content_for :modal_content do
    .text-xl{style: 'margin-bottom: 25px;'}
        Sign in
    = tag :div, id: dom_id(resource, :errors)
    = form_with(model: resource, as: resource_name, url: session_path(resource_name), class: 'w-full max-w-md') do |f|
        %div{class: 'flex flex-wrap -mx-3 mb-6'}
            %div{class: "w-full px-3 mb-6 md:mb-0"}
                = f.label :email, 'Email address', class: 'ca-form-label'
                = f.email_field :email, autofocus: true, class: 'ca-form-input-field'
        %div{class: 'flex flex-wrap -mx-3 mb-6'}
            %div{class: "w-full px-3 mb-6 md:mb-0"}
                = f.label :password, @minimum_password_length ? "Password (#{@minimum_password_length} characters minimum)" : 'Password', class: 'ca-form-label'
                = f.password_field :password, class: 'ca-form-input-field'
        %div{class: 'flex flex-wrap -mx-3 mb-6'}
            %div{class: "w-full px-3 mb-6 md:mb-0"}
        - if devise_mapping.rememberable?
            %div{class: 'inline-flex mb-6'} 
                = f.check_box :remember_me, class: 'mr-2 leading-tight'
                = f.label :remember_me, class: 'ca-form-label'
        %div{class: 'flex flex-wrap -mx-3 mb-6'}
            %div{class: "w-full px-3 mb-6 md:mb-0"}
                = f.submit 'Sign in', class: 'ca-button'


= render partial: 'partials/modal'